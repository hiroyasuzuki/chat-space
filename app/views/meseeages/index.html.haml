.chat-page
  = render partial: "devise/shared/chat_left"
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group
          SMAP
        %ul.main-header__left-box__member-list
          Member：
          %li.main-header__left-box__member-list__member
            中居
          %li.main-header__left-box__member-list__member
            木村              
      =link_to 'Edit', "/groups/1/edit", class: "main-header__edit-btn"   
    .messages
      .message
        .message__first
          .message__first__talker
            中居
          .message__first__data
            2019/10/21(Mon) 00:00:00
        .message__first__text
          解散しました

        .message__second
          .message__second__talker
            木村
          .message__second__data
            2019/10/21(Mon) 00:00:00
        .message__second__text
          解散しました

    .form
      %form.new_message{method: "post"}
      .input-box
        %input.input-box__text{name: "message[content]", placeholder: "type a message", type: "text"}
        %label.input-box__image{for: "message_image"}
          %i.fa.fa-image
          %input#message_image.input-box__image__file{name: "message[image]", type: "file"}
      %input.submit-btn{name: "send", type: "submit", value: "Send"}
        