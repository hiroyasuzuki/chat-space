.chat-left
  .left-header
    .left-header__box
      .left-header__box__user-name
        =current_user.name
      .left-header__box__menu
        =link_to new_group_path do
          = fa_icon 'edit', class:"left-header__box__menu__new-group"
        =link_to edit_user_path(current_user) do
          = fa_icon 'cog', class:"left-header__box__menu__edit-user"
  .groups
    - current_user.groups.each do |group|
      .group-first
        = link_to group_messages_path(group) do
          .group-first__group-name
            = group.name
          .group-first__latest-message
            = group.show_last_message